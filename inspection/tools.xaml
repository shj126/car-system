<Page x:Class="inspection.tools"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:inspection"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="tools">

    <Grid Height="935">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1"  HorizontalAlignment="Center">
            <Button Width="350" Height="400" Margin="0 280 0 0" FontSize="36" Foreground="White" x:Name="btn_sb" Click="btn_sb_Click" VerticalAlignment="Top">
                <Button.Content>
                    <TextBlock Margin="0 0 0 330">示波器</TextBlock>
                </Button.Content>
                <Button.Template >
                    <ControlTemplate TargetType="{x:Type Button}" >
                        
                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="8,8,8,8">
                            
                            <Border.Background>
                                <ImageBrush ImageSource="images/sbq.png"/>
                            </Border.Background>
                            <ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
        <StackPanel Grid.Column="2"  HorizontalAlignment="Center">
            <Button Width="350" Height="400" Margin="0 280 0 0"  FontSize="36"  Foreground="White" x:Name="btn_wy" Click="btn_wy_Click">
                <Button.Content>
                    <TextBlock Margin="0 0 0 330">万用表</TextBlock>
                </Button.Content>
                <Button.Background>
                    <ImageBrush ImageSource="images/wyb.png"/>
                </Button.Background>
                <Button.Template >
                    <ControlTemplate TargetType="{x:Type Button}" >
                        <Border BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="1" CornerRadius="8,8,8,8">
                            <Border.Background>
                                <ImageBrush ImageSource="images/wyb.png"/>
                            </Border.Background>
                            <ContentPresenter Content="{TemplateBinding ContentControl.Content}" HorizontalAlignment="Center" VerticalAlignment="Center" ></ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
        <StackPanel Grid.Column="0"  HorizontalAlignment="Center">
            <Button Width="350" Height="400" Margin="0 280 0 0"  FontSize="36"  Foreground="White" x:Name="btn_dec" Click="btn_dec_Click">
                <Button.Content>
                    <TextBlock Margin="0 0 0 330">解码仪</TextBlock>
                </Button.Content>
                <Button.Background>
                    <ImageBrush ImageSource="images/wyb.png"/>
                </Button.Background>
                <Button.Template >
                    <ControlTemplate TargetType="{x:Type Button}" >
                        <Border BorderBrush="{TemplateBinding Control.BorderBrush}" BorderThickness="1" CornerRadius="8,8,8,8">
                            <Border.Background>
                                <ImageBrush ImageSource="images/dec4.png"/>
                            </Border.Background>
                            <ContentPresenter Content="{TemplateBinding ContentControl.Content}" HorizontalAlignment="Center" VerticalAlignment="Center" ></ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
        
    </Grid>
</Page>
