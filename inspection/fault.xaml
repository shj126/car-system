<Page x:Class="inspection.fault"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
     
      xmlns:convert="clr-namespace:inspection"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="fault" Unloaded="Page_Unloaded">
    <Page.Resources>
        <convert:DataConverter x:Key="MyConvert"></convert:DataConverter>
        <convert:ColorConvert x:Key="Color"></convert:ColorConvert>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"  BorderThickness="1" Margin="70,80">



            <GroupBox Header="故障点" FontSize="18" Margin="5,5" Foreground="ForestGreen"  Width="680" Height="800">

                <ListView x:Name="ListView1" Width="600"  Height="750" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Visible">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Height" Value="50" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="编号" Width="50"  DisplayMemberBinding="{Binding ID}"/>
                            <GridViewColumn Header="名称" Width="100" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="状态" Width="50" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel  Background="{Binding Path=Status,Converter={StaticResource Color} }">
                                            <TextBlock  Text="{Binding Status,Converter={StaticResource ResourceKey=MyConvert}}"></TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="操作" Width="400">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="故障" Width="110" Margin="3,0" x:Name="Error" Click="Error_Click_1"/>
                                            <Button Content="虚接" Width="110" Margin="3,0" x:Name="OK" Click="OK_Click_1"/>
                                            <Button Content="还原" Width="110" Margin="3,0" x:Name="ListViewReStore" Click="ListViewReStore_Click_1"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>
        </Border>

        <Border Grid.Column="1"  BorderThickness="1" Margin="50,50">
            <GroupBox Header="已设置" FontSize="18" Margin="5,5" Foreground="ForestGreen"  Width="680" Height="800">
                <ListView x:Name="ListView2" Width="600" Height="750" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Visible">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Height" Value="50" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="编号" Width="50" DisplayMemberBinding="{Binding ID}"/>
                            <GridViewColumn Header="名称" Width="100" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="状态" Width="50" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel  Background="{Binding Path=Status,Converter={StaticResource Color} }">
                                            <TextBlock  Text="{Binding Status,Converter={StaticResource ResourceKey=MyConvert}}"></TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="操作" Width="400">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="还原" Width="110" Margin="3,0" x:Name="restore" Click="restore_Click_1"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>
        </Border>
        <Button x:Name="btn_reset" Content="刷新" HorizontalAlignment="Left" Margin="70,28,0,0" VerticalAlignment="Top" Width="115" Height="34" Click="btn_reset_Click"/>
        <Button x:Name="setalllist" Content="还原全部" HorizontalAlignment="Left" Margin="228,28,0,0" VerticalAlignment="Top" Width="114" Height="34" Click="setalllist_Click"/>
    </Grid>
</Page>
